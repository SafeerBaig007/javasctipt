{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "user-node/*"
            ]
        }
    },
    "include": [
      "server/controllers/**/*",
      "server/middlewares/**/*",
      "server/routes/**/*",
      "app.ts"
      ]
  }